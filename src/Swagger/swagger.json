{
    "swagger": "2.0",
    "info": {
        "version": "v1",
        "title": "Fundoo Notes",
        "description": "Fundoo Notes CLI"
    },
    "host": "localhost:3000",
    "basePath": "/api/v1/",
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/users/Register": {
            "post": {
                "tags": [
                    "User"
                ],
                "description": "New user registration",
                "parameters": [
                    {
                        "name": "New User registration",
                        "in": "body",
                        "description": "Enter valid user details",
                        "schema": {
                            "$ref": "#/definitions/NewUser"
                        },
                        "required": true
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "201": {
                        "description": "User registration done successfully"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/users/login": {
            "post": {
                "tags": [
                    "User"
                ],
                "description": "User login",
                "parameters": [
                    {
                        "name": "User Login",
                        "in": "body",
                        "description": "Enter valid user email-id and password",
                        "schema": {
                            "$ref": "#/definitions/UserLogin"
                        },
                        "required": true
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "201": {
                        "description": "User logged successfully done"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/users/forgotpassword": {
            "post": {
                "tags": [
                    "User"
                ],
                "description": "Forgot Password",
                "parameters": [
                    {
                        "name": "Forgot password",
                        "in": "body",
                        "description": "Enter valid user email-id ",
                        "schema": {
                            "$ref": "#/definitions/ForgotPassword"
                        },
                        "required": true
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "202": {
                        "description": "Reset link send successfully"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/users/ResetPassword": {
            "put": {
                "tags": [
                    "User"
                ],
                "description": "Reset Password",
                "parameters": [
                    {
                        "name": "Reset password",
                        "in": "body",
                        "description": "Enter new password  ",
                        "schema": {
                            "$ref": "#/definitions/ResetPassword"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "202": {
                        "description": "Password updated successfully"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    },
                    "400": {
                        "description": "Invalid authorization token"
                    }
                },
                "security": [
                    {
                        "JWT": []
                    }
                ]
            }
        }
    },
    "definitions": {
        "NewUser": {
            "type": "object",
            "properties": {
                "firstname": {
                    "type": "string"
                },
                "lastname": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "UserLogin": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "forgetPassword": {
            "type": "object",
            "properties": {
                "email": {
                 "type": "string"
                }
            }
        },
        "resetPassword": {
            "type": "object",
            "properties": {
              "password": {
                 "type": "string"
                }
            }
        }   
    },
    "securityDefinitions": {
        "JWT": {
        "type": "apiKey",
        "name": "authorization",
        "in": "header"
        }
    }    
}
        